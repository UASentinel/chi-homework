@model Statistics

@{
    ViewData["Title"] = "Statistics";
}

<div class="container pt-3">
    <div class="container pt-3">
        <div class="row pt-4">
            <div class="col-9">
                <h2 class="text-primary"><i class="bi bi-list-ul"></i>&nbsp;&nbsp;My statistics</h2>
            </div>
        </div>
    </div>
    <br />
    <form method="post" class="form-statistics">
        <table style="width: 100%">
            <tr>
                <td style="width: 35%">
                    <label>Month</label>
                    <select asp-for="Month" asp-items="(List<SelectListItem>)@ViewData["Months"]" class="form-control"></select>
                </td>
                <td style="width: 35%">
                    <label>Year</label>
                    <select asp-for="Year" asp-items="(List<SelectListItem>)@ViewData["Years"]" class="form-control"></select>
                </td>
                <td>
                    <button type="submit" class="btn btn-success btn-statistics">
                        <i class="bi bi-check-circle"></i>&nbsp;&nbsp;Submit
                    </button>
                </td>
            </tr>
        </table>
    </form>
    @if (Model.Spendings != null && Model.Spendings.Count != 0)
    {
        <table class="table table-hover" style="margin-bottom: 150px">
            <thead>
                <tr>
                    <th style="width:5%">Id</th>
                    <th style="width:10%">Category</th>
                    <th style="width:10%">Sum</th>
                    <th style="width:10%">Date</th>
                    <th style="width:10%">Time</th>
                    <th style="width:30%">Comment</th>
                    <th style="width:20%" colspan="2">Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.Spendings)
                {
                    <tr class="table-light">
                        <th>@item.Id</th>
                        <td>@item.Category.Name</td>
                        <td>@item.Sum</td>
                        <td>@item.DateTime.ToShortDateString()</td>
                        <td>@item.DateTime.ToShortTimeString()</td>
                        @if (item.Comment != null)
                        {
                            <td>@item.Comment</td>
                        }
                        else
                        {
                            <td>...</td>
                        }
                        <td>
                            <a asp-controller="Spending" asp-action="Update" asp-route-id="@item.Id" class="btn btn-warning mx-2 btn-sm">
                                <i class="bi bi-pencil-square"></i>&nbsp;&nbsp;Update
                            </a>
                        </td>
                        <td>
                            <a asp-controller="Spending" asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger mx-2 btn-sm">
                                <i class="bi bi-trash"></i>&nbsp;&nbsp;Delete
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <div class="row pt-4" style="margin-bottom: 150px">
            <div class="col-9">
                <h4 class="text-primary">No spendings to show&nbsp;&nbsp;<i class="bi bi-emoji-frown"></i></h4>
            </div>
        </div>
    }
</div>
